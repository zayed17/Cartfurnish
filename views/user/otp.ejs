        <script>
            async function validate(event) {
    event.preventDefault();

    const otp = document.getElementById('otp');
    const errorshow = document.getElementById('otpError');
    const id = document.getElementById("id").value;

    if (otp.value.trim() == "") {
        errorshow.textContent = "Enter OTP";
        clearError(errorshow, 2000);
    } else if(/[a-z,A-Z]/.test(otp.value)) {
        errorshow.textContent = "Enter valid OTP";
        clearError(errorshow, 2000);
    } else if (otp.value.length != 4) {
        errorshow.textContent = "Enter 4 digits";
        clearError(errorshow, 2000);
    } else {
        try {
            const response = await $.ajax({
                url: 'verifyotp',
                method: 'POST',
                data: { otp: otp.value, id }  
            });

            if (response.expired) {
                errorshow.textContent = response.message;
                clearError(errorshow, 2000);
            } else if(response.valid) {
                errorshow.textContent = response.message;
                clearError(errorshow, 2000);
            } else {
                window.location.href = '/';
            }
        } catch (error) {
            console.error('Error during AJAX request:', error);
        }
    }
}

function clearError(element, time) {
    setTimeout(() => element.textContent = "", time);
}
 
        </script>
        


 

