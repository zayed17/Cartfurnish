<script>
  function cancelProduct(productId) {
    // Use SweetAlert to prompt the user for the cancel reason
    Swal.fire({
        title: 'Enter Cancel Reason',
        input: 'text',
        inputLabel: 'Cancel Reason',
        inputPlaceholder: 'Please enter the reason for cancellation',
        showCancelButton: true,
        confirmButtonText: 'Cancel Order',
        cancelButtonText: 'Cancel',
        preConfirm: (cancelReason) => {
            if (!cancelReason) {
                Swal.showValidationMessage('Cancel reason is required');
            }
            return cancelReason;
        },
    }).then((result) => {
        if (result.isConfirmed) {
            const data = {
                productId,
                cancelReason: result.value,
            };

            fetch('/cancelproduct', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(result => {
               if(result.cancel){
                location.reload();
               }
            })
            .catch(error => {
                console.error('Error during cancel request:', error);
            });
        }
    });
}

</script>


