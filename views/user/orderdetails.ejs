    Swal.fire({
        title: 'Enter Return Reason',
        input: 'text',
        inputLabel: 'Return Reason',
        inputPlaceholder: 'Please enter the reason for return',
        showCancelButton: true,
        confirmButtonText: 'Cancel Order',
        cancelButtonText: 'Cancel',
        preConfirm: (cancelReason) => {
            if (!cancelReason) {
                Swal.showValidationMessage('Return reason is required');
            }
            return cancelReason;
        },
    }).then((result) => {
        if (result.isConfirmed) {
            const data = {
                productId,
                cancelReason: result.value,
            };

            fetch('/returnproduct', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(result => {
               if(result.cancel){
                location.reload();
               }
            })
            .catch(error => {
                console.error('Error during cancel request:', error);
            });
        }
    });
}





