    <script>
        function updateQuantity(productId, count) {
            const data = { productId, count };

            fetch('/updatecart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
                .then(response => response.json())
                .then((response) => {
                    if (response.success) {
                        $("#reloadDiv").load("/cart #reloadDiv");
                    } else {
                        // Handle other cases or errors here
                        swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: response.message,
                        });
                    }
                })
                .catch(error => console.error('Error updating cart:', error));
        }

        function removecartitem(productId) {
            fetch('/removecartitem', {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId }),
            })
                .then(response => response.json())
                .then(response => {
                    if (response.success) {
                        Swal.fire({  // Change "swal" to "Swal"
                            title: "Item Removed!",
                            text: "The item has been successfully removed from your cart.",
                            icon: "success",
                            showConfirmButton: false,
                            timer: 5000,
                        });
                        setTimeout(() => {
                            location.reload(); // Reload the page
                        }, 1500);
                    } else {
                        // Handle error
                        console.error('Error removing item:', response.error);
                    }
                })
                .catch(error => {
                    console.error('Error removing item:', error);
                });
        }


    </script>

