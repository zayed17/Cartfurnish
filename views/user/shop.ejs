<script>
         let previousInputValue = '';

async function handleSearchInput(event) {
    const partialInput = document.getElementById('searchInput').value;

    if (event.key === 'Enter') {
        // If Enter key is pressed, navigate to the search URL
        window.location.href = `/shop?search=${partialInput}`;
    } else {
        // If other keys are pressed, perform autocomplete and send query to the backend
        if (partialInput !== previousInputValue) {
            const response = await fetch(`/search?input=${partialInput}`);
            const data = await response.json();
            displayAutocompleteSuggestions(data.suggestions);
            
            // Note: sendSearchQueryToBackend is not needed in this case
            // Backend query will be handled when navigating to /shop
            previousInputValue = partialInput;
        }
    }
}

    function displayAutocompleteSuggestions(suggestions) {
    const partialInput = document.getElementById('searchInput').value.toLowerCase();

    // If the input is empty, hide the suggestions and return
    if (partialInput.trim() === '') {
        document.querySelector('.suggestions-container').style.display = 'none';
        return;
    }

    suggestions.sort((a, b) => {
        const nameA = a.name.toLowerCase();
        const nameB = b.name.toLowerCase();

        // Sort by the number of occurrences of the partial input in the name
        const countA = (nameA.match(new RegExp(partialInput, 'g')) || []).length;
        const countB = (nameB.match(new RegExp(partialInput, 'g')) || []).length;

        return countB - countA;
    });

    const suggestionsList = document.getElementById('suggestionsList');
    suggestionsList.innerHTML = '';

    // Display the top three most matching suggestions
    suggestions.slice(0, 2).forEach(suggestion => {
        const listItem = document.createElement('li');
        listItem.textContent = suggestion.name;
        suggestionsList.appendChild(listItem);

        // Add a click event listener to each suggestion
        listItem.addEventListener('click', () => {
            // Set the selected suggestion as the input value
            document.getElementById('searchInput').value = suggestion.name;
            // Clear the suggestions list
            suggestionsList.innerHTML = '';
        });
    });

    // Show or hide the suggestions container based on whether there are suggestions
    document.querySelector('.suggestions-container').style.display = suggestions.length > 0 ? 'block' : 'none';
}
        </script>








