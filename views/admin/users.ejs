                <div class="card mt-4">
                    <div class="table-data">
                        <div class="order">
                            <% if(users.length> 0 && users.map(user => !user.is_admin)) { %>
                                <div class="table-responsive">
                                    <table id="tablePagination" class="table table-bordered table-hover table-striped">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th scope="col">
                                                    <center>Sl.No.</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Name</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Email</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Mobile</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Verified</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Block / Unblock</center>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let i = 0; i < users.length; i++) { %>
                                                <% if (!users[i].is_admin) { %>
                                                    <tr>
                                                        <td align="center">
                                                            <%= i + 1 %>
                                                        </td>
                                                        <td align="center">
                                                            <%= users[i].name %>
                                                        </td>
                                                        <td align="center">
                                                            <%= users[i].email %>
                                                        </td>
                                                        <td align="center">
                                                            <%= users[i].mobile %>
                                                        </td>
                                                        <td align="center">
                                                            <%= users[i].is_verified ? "True" : "False" %>
                                                        </td>
                                                        <td align="center">
                                                            <button class="btn btn-outline-danger block-button"
                                                                data-user-id="<%= users[i]._id %>"
                                                                data-initial-status="<%= users[i].is_blocked %>"
                                                                onclick="block('<%= users[i]._id %>')">
                                                                <%= users[i].is_blocked ? "Unblock" : "Block" %>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            <% } %>
                                        </tbody>
                                    </table>
                                    
                                </div>
                                <% } else { %>
                                    <p>No users found in the database.</p>
                                    <% } %>
        
                        </div>
                    </div>
