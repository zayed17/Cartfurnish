<script>
    function block(userId) {
        const data = { userId: userId };
        console.log(data);
      
        const button = $(`button[data-user-id="${userId}"]`); // Select the button by data-user-id attribute
      
        $.ajax({
          method: 'POST',
          url: '/admin/blockUser',
          data: JSON.stringify(data),
          contentType: 'application/json',
          success: function (response) {
            if (response.block === true) {
              // Update the button text and data-initial-status attribute
              button.text("Unblock").attr("data-initial-status", false);
              $('#reloadArea').load('/admin/user #reloadArea');
            } else {
              swal("Stock Limit Reached", "", "error");
              $('#reloadArea').load('/cart #reloadArea');
            }
          },
          error: function (error) {
            console.error(error);
          }
        });
      }
</script>`      




