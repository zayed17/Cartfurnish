        <section class="content-main">
            <div class="container-fluid">
                <div class="card mt-4">
                    <div class="table-data">
                        <div class="order">
                            <% if(users.length> 0) { %>
                                <div class="table-responsive">
                                    <table id="tablePagination" class="table table-bordered table-hover table-striped">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th scope="col">
                                                    <center>Sl.No.</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Name</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Email</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Mobile</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Verified</center>
                                                </th>
                                                <th scope="col">
                                                    <center>Block / Unblock</center>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let i = 0; i < users.length; i++) { %>
                                                <% if (users[i].is_admin == false) { %>
                                                    <tr>
                                                        <td align="center">
                                                            <%= i %>
                                                        </td>
                                                        <td align="center">
                                                            <%= users[i].name %>
                                                        </td>
                                                        <td align="center">
                                                            <%= users[i].email %>
                                                        </td>
                                                        <td align="center">
                                                            <%= users[i].mobile %>
                                                        </td>
                                                        <td align="center">
                                                            <%= users[i].is_verified ? "True" : "False" %>
                                                        </td>


                                                        <td align="center">
                                                            <% if (users[i].is_blocked) { %>
                                                                <a class="unblock-user" data-user-id="<%= users[i]._id %>"><span
                                                                        class="badge rounded-pill alert-success">unblock</span></a>
                                                                <% } else { %>
                                                                    <a class="block-user"
                                                                        data-user-id="<%= users[i]._id %>"><span
                                                                            class="badge rounded-pill alert-warning">block</span></a>
                                                                    <% } %>
                                                        </td>

                                                    </tr>
                                                    
                                                <% } %>
                                            <% } %>
                                        </tbody>
                                    </table>
                                    
                                </div>
                                <% } else { %>
                                    <p>No users found in the database.</p>
                                    <% } %>
        
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- content-main end// -->
